@page "/"

<h1>Image recognition</h1>

<main>
    <div class="row">
        <div class="col-lg-6">
            <h2 class="p-4">Insert a image url here</h2>
            <div class="p-4">
                <form action="javascript:void(0);" method="POST" onsubmit="analyzeImage()">
                    <div class="form-group">
                        <label for="imageUrlInput">Image URL</label>
                        <input type="text" class="form-control" id="imageUrlInput" aria-describedby="emailHelp"
                               placeholder="Type image url here">
                        <small id="emailHelp" class="form-text text-muted">
                            Image type must be .jpg or .png
                        </small>
                    </div>
                    <input type="submit" value="Analyze image" class="btn btn-primary">
                </form>
                <hr style="width:100%;" />
                <div id="spinner-border" class="spinner-border" role="status" style="visibility:hidden">
                    <span class="sr-only">Loading...</span>
                </div>
                <div id="imageDescription"></div>
            </div>
        </div>
        <div class="col-lg-6">
            <div id="previewImageContainer"></div>
        </div>
    </div>
</main>
